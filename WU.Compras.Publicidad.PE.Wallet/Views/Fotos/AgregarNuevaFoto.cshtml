@model WU.Compras.Publicidad.PE.Wallet.Models.Entity.PictureViewModels
<form asp-action="AgregarNuevaFoto" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Imagen</h1>
                <div class="container">
                    <div class="form-group row">
                        <label for="lbl_NombreImagen" class="col-sm-2 col-form-label">Nombre de la Imagen *</label>
                        <div class="col-sm-10">
                            <input type="text" maxlength="200" asp-for="NombreImagen" class="form-control" id="txt_Nombreimagen">
                            <span asp-validation-for="NombreImagen" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lbl_descripcionImagen" class="col-sm-2 col-form-label">Descripcion *</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" asp-for="descripcionImagen" id="txtADescripcion"></textarea>
                            <span asp-validation-for="descripcionImagen" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lbl_posicionPortada" class="col-sm-2 col-form-label">Posicion en la Portada *</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="posicionPortada">
                            <span asp-validation-for="posicionPortada" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="form-group row">
                        <label for="fl_imagen" class="col-sm-2 col-form-label">Imagen *</label>
                        <div class="col-sm-10">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <span class="btn btn-primary btn-file">
                                    <input type="file" name="Files" />
                                </span>
                                <span class="fileupload-preview"></span>
                                <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none">×</a>
                            </div>
                        </div> 
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="container">
                    <h1>Producto</h1>
                    <div class="form-group row">
                        <label for="lbl_Nombreproducto" class="col-sm-2 col-form-label">Nobre del Producto * </label>
                        <div class="col-sm-10">
                            <input type="text" maxlength="200" class="form-control" asp-for="NombreProducto" id="txt_NombreProducto">
                            <span asp-validation-for="NombreProducto" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lbl_descripcionImagen" class="col-sm-2 col-form-label">Descripcion *</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="txtADescripcion" asp-for="DescripcionProducto"></textarea>
                            <span asp-validation-for="DescripcionProducto" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label for="lbl_Precio" class="col-sm-2 col-form-label">Precio Base * </label>
                        <div class="col-sm-10">
                            <input type="text" maxlength="200" class="form-control" asp-for="Precio" id="txt_precio">
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lbl_Stock" class="col-sm-2 col-form-label">Stock * </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Stock" id="txt_Stock">
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lbl_Produccion" class="col-sm-2 col-form-label">Fecha  de producción * </label>
                        <div class="col-sm-10">
                            <p> <input type="text" id="datepicker" asp-for="fechaproduccion" class="datepicker">
                                <span asp-validation-for="fechaproduccion" class="text-danger"></span>
                            </p>
                        </div>

                    </div>

                    <div class="form-group row">
                        <label for="lbl_FechaExpiracion" class="col-sm-2 col-form-label">Fecha  de Expiracion * </label>
                        <div class="col-sm-10">
                            <p> <input type="text" id="datepicker1" asp-for="fechaexpiracion" class="datepicker">
                                <span asp-validation-for="fechaexpiracion" class="text-danger"></span>
                            </p>
                        </div>
                    </div>

                </div>
            </div>
            <div class="container">
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </div>
            </div>

        </div>


    </div>
</form>

