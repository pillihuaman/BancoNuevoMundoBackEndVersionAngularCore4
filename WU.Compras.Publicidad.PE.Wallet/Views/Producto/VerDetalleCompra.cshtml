   <div id="example">
        <div id="window">
            <div class="container">
                <div class="row">
                    <div class="col-md-1">
                        <div class="container">Numero</div>
                    </div>

                    <div class="col-md-3">
                        <div class="container">Nombre</div>
                    </div>

                    <div class="col-md-2">
                        <div class="container">Precio</div>
                    </div>
                    <div class="col-md-3">
                        <div class="container">Stock</div>
                    </div>
                    <div class="col-md-3">
                        <div class="container">Estado</div>
                    </div>

                </div>

                @if (Model != null)
                {
                    foreach (var modelo in Model)
                    {
                        var Numeracion = 0;
                        <form asp-action="VerDetalleCompra">
                            <div class="row">
                                <div class="col-md-1">
                                    <div class="container">@Numeracion</div>
                                </div>

                                <div class="col-md-3">
                                    <div class="container">@modelo.descripcion</div>
                                </div>

                                <div class="col-md-2">
                                    <div class="container">@modelo.Total</div>
                                </div>
                                <div class="col-md-3">
                                    <div class="container">@modelo.Stock</div>
                                </div>
                                <div class="col-md-3">
                                    <div class="container">
                                        <estadospedido estado="@modelo.Error"></estadospedido>
                                    </div>
                                </div>
                            </div>
                        </form>
                        @Numeracion= Numeracion + 1;

                    }
                }
            </div>
        </div>

        <span id="undo" style="display:none" class="k-button hide-on-narrow">Click here to open the window.</span>

        <div class="responsive-message"></div>

        <script>
                $(document).ready(function() {
                    var myWindow = $("#window"),
                        undo = $("#undo");

                    undo.click(function() {
                        myWindow.data("kendoWindow").open();
                        undo.fadeOut();
                    });

                    function onClose() {
                        undo.fadeIn();
                    }

                    myWindow.kendoWindow({
                        width: "600px",
                        title: "About Alvar Aalto",
                        visible: false,
                        actions: [
                            "Pin",
                            "Minimize",
                            "Maximize",
                            "Close"
                        ],
                        close: onClose
                    }).data("kendoWindow").center().open();
                });
        </script>

